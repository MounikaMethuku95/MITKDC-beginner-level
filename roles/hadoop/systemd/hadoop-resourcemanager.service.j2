[Unit]
Description=Hadoop ResourceManager
After=network.target

[Service]
Type=forking
User={{ hadoop_user }}
Group={{ hadoop_group }}
ExecStart={{ hadoop_symlink }}/sbin/yarn-daemon.sh start resourcemanager
ExecStop={{ hadoop_symlink }}/sbin/yarn-daemon.sh stop resourcemanager
Restart=on-failure

[Install]
WantedBy=multi-user.target
